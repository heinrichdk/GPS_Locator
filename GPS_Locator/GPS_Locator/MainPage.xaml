<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPS_Locator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="GPS Adress Locator" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Continent" Grid.Row="0" Grid.Column="0"/>
            <Label  Grid.Row="0" Grid.Column="1" x:Name="lblContinent"/>
            <Label Text="Country" Grid.Row="1" Grid.Column="0"/>
            <Label  Grid.Row="1" Grid.Column="1" x:Name="lblCountry"/>
            <Label Text="City" Grid.Row="2" Grid.Column="0"/>
            <Label  Grid.Row="2" Grid.Column="1" x:Name="lblCity"/>
            <Label Text="Locality" Grid.Row="3" Grid.Column="0"/>
            <Label  Grid.Row="3" Grid.Column="1" x:Name="lblLocality"/>
        </Grid>
    </StackLayout>

</ContentPage>
